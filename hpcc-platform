from __future__ import print_function

import os
import signal
import getopt
import sys
import pwd
import logging

from utils.platform import Platform

def signal_handler(signo, frame):
    if signo == signal.SIGINT:
        logging.info("SIGINT caught")
    logging.info("Exiting")
    os._exit(int(signo))

signal.signal(signal.SIGINT,  signal_handler)
signal.signal(signal.SIGQUIT, signal_handler)
signal.signal(signal.SIGTERM, signal_handler)

def usage():
    print("Usage:  hpcc-platform [option(s)]\n")
    print(" list-components           list all components and their respective addresses")
    print(" -f|--force          sigkill on components that fail to stop")
    print(" -v|--verbose        print logging information to STDOUT")
    print(" -p|--ping           check connections to cluster nodes")
    print(" -?|--help           print help")

if __name__ == '__main__':

    # setup logging
    logname = "hpcc-platform.log"
    logging.basicConfig(filename=logname,level=logging.INFO)
    logger = logging.getLogger(__name__)
    dh = logging.FileHandler(logname + ".debug")
    dh.setLevel(logging.DEBUG)
    logger.addHandler(dh)

    logger.info("starting hpcc-platform driver")
    logger.debug("debugging working")

    uid = pwd.getpwnam('hpcc')[2]
    os.setuid(uid)

    platform = Platform()

    try:
        opts, args = getopt.getopt(sys.argv[1:],":csv",["help","list","verbose"])
    except getopt.GetoptError as err:
        logger.error(str(err))
        usage()
        exit(1)

    for arg, value in opts:
        if arg in ("-?", "--help"):
            usage()
            exit(0)
        elif arg in ("-v", "--verbose"):
            ch = logging.StreamHandler()
            ch.setLevel(logging.INFO)
            cf = logging.Formatter('%(asctime)s - %(name)s - %(levelname)s - %(message)s')
            ch.setFormatter(cf)
            logger.addHandler(ch)
        elif arg in ("-d", "--debug"):
            logging.setLevel(logging.DEBUG)
        elif arg in ("list"):
            platform.print_list(True)
        elif arg in ("-p", "--ping"):
            platform.ping(True)
        else:
            print("Unknown Option: %s" % arg)
            logger.debug("Unknown Option: %s", arg)
            usage()
            exit(1)






